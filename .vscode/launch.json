{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flow2API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "STORAGE_MODE": "file"
            },
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Python: Flow2API (uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8001",
                "--reload"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "STORAGE_MODE": "file"
            },
            "python": "${command:python.interpreterPath}"
        }
    ]
}

